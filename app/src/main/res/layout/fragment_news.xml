<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.CardView
            android:id="@+id/news_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp">

            <ImageView
                    android:id="@+id/news_item_details_image"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/news_place_holder_image" />

            <TextView
                    android:id="@+id/news_item_details_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="16dp"
                    android:text="title"
                    android:textSize="22sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/news_item_details_image" />

            <TextView
                    android:id="@+id/news_item_details_auth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="author"
                    app:layout_constraintEnd_toEndOf="@+id/news_item_details_title"
                    app:layout_constraintStart_toStartOf="@+id/news_item_details_title"
                    app:layout_constraintTop_toBottomOf="@+id/news_item_details_title" />

            <TextView
                    android:id="@+id/news_item_details_desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="desc"
                    app:layout_constraintEnd_toEndOf="@+id/news_item_details_auth"
                    app:layout_constraintStart_toStartOf="@+id/news_item_details_auth"
                    app:layout_constraintTop_toBottomOf="@+id/news_item_details_auth" />

            <TextView
                    android:id="@+id/news_item_details_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="date"
                    app:layout_constraintEnd_toEndOf="@+id/news_item_details_desc"
                    app:layout_constraintTop_toBottomOf="@+id/news_item_details_desc" />


        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>

    <Button
            android:id="@+id/open_website_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="OPEN WEBSITE"
            android:textSize="16sp"
            android:background="@color/colorblack"
            android:textColor="@color/colorGrey"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/news_card"
            app:layout_constraintEnd_toEndOf="@+id/news_card"
            app:layout_constraintStart_toStartOf="@+id/news_card" />

</android.support.constraint.ConstraintLayout>
