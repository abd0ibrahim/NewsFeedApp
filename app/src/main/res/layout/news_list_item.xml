<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:layout_marginBottom="16dp"
        android:layout_margin="10dp">


    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

        <ImageView
                android:id="@+id/news_item_image"
                android:layout_width="0dp"
                android:layout_height="200dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/news_place_holder_image" />

        <TextView
                android:id="@+id/news_item_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="16dp"
                android:text="dddddddddddddddddddd"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/news_item_image" />

        <TextView
                android:id="@+id/news_item_auth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="@+id/news_item_title"
                app:layout_constraintStart_toStartOf="@+id/news_item_title"
                app:layout_constraintTop_toBottomOf="@+id/news_item_title" />

        <TextView
                android:id="@+id/news_item_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="@+id/news_item_auth"
                app:layout_constraintStart_toStartOf="@+id/news_item_auth"
                app:layout_constraintTop_toBottomOf="@+id/news_item_auth" />

        <TextView
                android:id="@+id/news_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="@+id/news_item_desc"
                app:layout_constraintTop_toBottomOf="@+id/news_item_desc" />


    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>